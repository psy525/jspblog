  </environments>
  <mappers>
    <mapper resource="/mapper/sign-mapper.xml"/>
    <mapper resource="/mapper/login-mapper.xml"/>
    <mapper resource="/mapper/blog-mapper.xml"/>
    <mapper resource="/mapper/file-mapper.xml"/>
    <mapper resource="/mapper/comment-mapper.xml"/>
